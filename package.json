{
  "name": "athena-browser-mcp",
  "version": "1.0.3",
  "description": "MCP server for controlling Athena browser",
  "type": "module",
  "main": "dist/src/index.js",
  "bin": {
    "athena-browser-mcp": "./dist/src/index.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsc --watch",
    "start": "node dist/src/index.js",
    "mcp:inspect": "npx @modelcontextprotocol/inspector node dist/src/index.js",
    "prepare": "npm run build",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "check": "npm run type-check && npm run lint && npm run format:check && npm run test"
  },
  "keywords": [
    "mcp",
    "browser-automation",
    "cef",
    "qt",
    "claude",
    "ai-agents"
  ],
  "author": "Nadeem",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lespaceman/athena-browser-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/lespaceman/athena-browser-mcp/issues"
  },
  "homepage": "https://github.com/lespaceman/athena-browser-mcp#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.0",
    "chrome-remote-interface": "^0.33.3",
    "playwright": "^1.40.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/chrome-remote-interface": "^0.31.14",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.46.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
